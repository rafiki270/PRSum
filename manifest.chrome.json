{
  "manifest_version": 3,
  "name": "PRSum â€” LLM-Friendly Summarizer",
  "version": "0.1.0",
  "description": "Summarize webpages into clean, LLM-ready context; supports Local, ChatGPT, and Gemini engines.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.aiplatform.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Summarize this page",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
